<h1>Tasks</h1>
<ul class="tasks-list">
<% @tasks.each do |task| %>
  <li class="tasks-list-item">
    <input type="checkbox" disabled <%= task.completed ? "checked" : "" %>/>
    <%= link_to "#{task.title}", task_path(task) %>
    <div class="btn-delete"><%= link_to "delete", task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you SUUUUUREE!???"}%></div>
  </li>
<% end %>
</ul>

<div class="btn-create"><%= link_to "Add a task", new_task_path %></div>
